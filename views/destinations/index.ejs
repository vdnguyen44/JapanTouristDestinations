<% layout('layouts/boilerplate') %>

<div id="map" style="width: 100%; height: 500px"></div>

    <h1>All Travel Destinations</h1>
    <div>
        <a href="/destinations/new">Add Destination</a>
    </div>

    <% for (let destination of destinations){%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=destination.images[0].url%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= destination.title %>
                        </h5>
                        <p class="card-text">
                            <%= destination.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= destination.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/destinations/<%=destination._id%>">View <%= destination.title
                                %> </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>

        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
            const destinations = {features: <%- JSON.stringify(destinations) %>}       
        </script>

        <script src="/javascripts/clusterMap.js"></script>